<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".SetMandalaFragment"
             android:background="#8FADCDCD"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="テーマを入力"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView8"/>
        <TextView
                android:text="イメージ画像をはいち"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintBottom_toTopOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="まんだらのせつめい。あああああああああああああああああああああああああああああああああああああああああああああああああああ"
                android:layout_width="203dp"
                android:layout_height="55dp"
                android:id="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintBottom_toTopOf="@+id/mandalaStart" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="まんだら　すたーと"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mandalaStart" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>