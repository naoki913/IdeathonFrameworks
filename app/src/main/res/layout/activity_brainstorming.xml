<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BrainstormingActivity">

    <TextView
            android:text="残り"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.173" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.038" android:textSize="24sp"/>
    <TextView
            android:text="time"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:id="@+id/textView_time" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.226"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView3" app:layout_constraintVertical_bias="0.0"
            android:inputType="numberSigned"/>
    <Button
            android:text="add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_add" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.95" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.958" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="648dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_time" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/horizontalScrollView">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/LinearLayout1"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginTop="32dp">
            <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button3"/>
        </LinearLayout>
    </HorizontalScrollView>
    <EditText
            android:layout_width="277dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addCardText" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.958"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="save"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:id="@+id/button_save" app:layout_constraintStart_toEndOf="@+id/textView_time"
            app:layout_constraintHorizontal_bias="0.123" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintVertical_bias="0.787"/>
    <Button
            android:text="load"
            android:layout_width="60dp"
            android:layout_height="37dp" android:id="@+id/button_load"
            app:layout_constraintStart_toEndOf="@+id/button_save" app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView" app:layout_constraintVertical_bias="0.896"/>
</android.support.constraint.ConstraintLayout>