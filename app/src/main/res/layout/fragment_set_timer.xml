<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".SetTimerFragment" android:background="#88FFFFFF">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <NumberPicker
                android:id="@+id/HourPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.25" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintVertical_bias="0.499"/>
        <NumberPicker
                android:id="@+id/SecondPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.772" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintVertical_bias="0.499"/>
        <NumberPicker
                android:id="@+id/MinutePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"

        />
        <TextView
                android:text="時"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/HourText"
                app:layout_constraintHorizontal_bias="0.269"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.653"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MinuteText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.653"
                app:layout_constraintHorizontal_bias="0.498"/>
        <TextView
                android:text="秒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SecondText"
                app:layout_constraintHorizontal_bias="0.732" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.653"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>